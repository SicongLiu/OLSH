CC=gcc
CXX=g++
RM=rm -f
CPPFLAGS=-g $(shell python-config --cflags)
LDFLAGS=-g $(shell python-config --ldflags)
LDLIBS=$(shell python-config --libs)

SRCS=Skyline.cpp
OBJS=$(subst .cc,.o,$(SRCS))

all: tool

tool: $(OBJS)
	$(CXX) $(CPPFLAGS) -o tool $(OBJS) $(LDLIBS)

depend: .depend

.depend: $(SRCS)
$(RM) ./.depend
$(CXX) $(CPPFLAGS) -MM $^>>./.depend;

clean:
$(RM) $(OBJS)

distclean: clean
$(RM) *~ .depend

include .depend
